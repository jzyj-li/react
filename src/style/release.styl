.release
  width 100%
  height 100%
.release__tab
  position relative
  ol
    background none
    border-bottom 2px solid #d0d0d0
    overflow hidden
    padding 0
    margin 0
  li
    float: left
    margin: 0 2px 0 0
    font-size: 14px
    height: 44px
    line-height: 45px
    width: 111px
    text-align: center
    cursor: pointer
  .active
    border-bottom: 2px solid #ff5f5f
    cursor: pointer
    color: #ff5f5f
    background: none
    background: -moz-linear-gradient(top, #e1e1e1, #fff)
    font-size: 16px
  p
    position: absolute
    right: 0
    top: 10px
    font-size: 14px
    color: #999
.release__content
  padding 20px 0
.title-tip
  display: block
  background-color: #fceded
  font-size: 14px
  color: #666
  width: 100%
  height: 40px
  line-height: 40px
  margin-bottom: 20px
  p
    padding: 0 20px;
    color: #969696;
.title-form
  position relative
  margin-bottom 20px
  input
    width: 100%;
    height: 40px
    padding: 8px 12px
    background-color: #fff
    border: 1px solid #ccc
    border-radius: 0
    box-shadow: inset 0 1px 1px rgba(0,0,0,.075)
    -webkit-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s
    transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s
  .title-number
    position: absolute
    right: 10px
    top: 10px
    font-size: 14px
    color: #999
.release-txt
  width 100%
  height 300px
  background-color pink
  margin-bottom 20px
.release-btn
  padding-left: 75px
  padding-top: 40px

