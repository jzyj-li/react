$bg = #666;
$width = 1180px
$color = #ff6565

html, body, p, ul, li
  padding 0
  margin 0
  font-family: 'PingFangSC', 'helvetica neue', 'hiragino sans gb', 'arial', 'microsoft yahei ui', 'microsoft yahei', 'simsun', 'sans-serif' !important;

a
  color white
  text-decoration none
  color #666666

button
  border none
  outline none
input,select
  outline none
*
  box-sizing border-box
  list-style-type none

.container
  width $width
  margin 0 auto
  height 100%

.content .container
  display flex
  flex-flow row
  margin 20px auto

.left-nav
  padding 0 10px
  width 28%;
  min-height 500px

.left-nav-list
  width 100%
  height 100%
  background #f4f4f4

.form-item
  display flex
  flex-flow row
  width 100%
  margin-bottom 15px
  label
    padding: 9px 10px
    width: 92px
    font-weight: 400
    line-height: 20px
    text-align: left
    color: #464545
  div
    min-height: 36px

.form-select
  height: 38px
  line-height: 1.3
  line-height: 38px
  background-color: #fff
  border-radius: 2px
  display: block
  border: 1px solid #e0e0e0
  width: 120px
  float: left
  margin-right: 10px
  text-align: center

.c-img
  padding: 4px
  line-height: 20px
  border: 1px solid #ddd
  overflow: hidden
  display: inline-block
  margin-bottom: 10px
  vertical-align: middle
  text-align: center
  cursor: pointer
  width: 200px
  height: 152px
  img
    width 100%
    height 100%
    display block

.button
  margin-left: 20px
  width: 140px
  border-radius: 4px
  font-size: 14px
  padding: 8px 20px
  color: #fff
  background-color: #ff6464
  border-color: #ff6464
  text-decoration: none
  transition: all .2s
  line-height: 1.3333333
  border: 1px solid transparent;
  &:hover
    cursor pointer

.button-default
  background-color: transparent
  border-color: #e25050
  color: #e25050

.canvas
  background-color pink

.layout__pagination
  margin-top: 20px;
  padding: 0 0 0 80px;
  display: inline-block;
  /* margin-right: 225px; */
  width: 100%;
  position: relative;
  ol
    width: 100%;
    font-size: 14px;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    margin: 0;
    padding: 0;
    -ms-flex-align: center;
    -webkit-align-items: center;
    align-items: center;
    -ms-flex-wrap: wrap;
    -webkit-flex-wrap: wrap;
    flex-wrap: wrap;
    list-style: none;
  .previoue__page, .next__page
    position: relative;
    text-align: center;
    line-height: 1;
    cursor: pointer;
    -webkit-appearance: none;
    -webkit-transition: all .2s ease-out;
    transition: all .2s ease-out;
    border: 1px solid transparent;
    border-radius: 4px;
    margin: 0;
    background-color: #f2f2f2;
    border-color: #d7dde4;
    color: #324050;
    padding: 8px 12px;
    font-size: 13px;
    min-width: 32px;
    &:hover
      border none
      color white
      background #ff5f5f
      border 1px solid transparent
  .item
    margin-top: 2px;
    margin-bottom: 2px;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -ms-flex-align: center;
    -webkit-align-items: center;
    align-items: center;
    height: 40px;
    margin-left 10px
  .item-button
    position: relative;
    text-align: center;
    line-height: 1;
    cursor: pointer;
    -webkit-appearance: none;
    -webkit-transition: all .2s ease-out;
    transition: all .2s ease-out;
    border: 1px solid transparent;
    border-radius: 4px;
    margin: 0;
    background-color: #f2f2f2;
    border-color: #d7dde4;
    color: #324050;
    padding: 8px 12px;
    font-size: 13px;
    min-width: 32px;
    &:hover
      border none
      color white
      background #ff5f5f
      border 1px solid transparent
  .ellipsis
    background none
  .active
    border none
    color white
    background #ff5f5f
    border 1px solid transparent











